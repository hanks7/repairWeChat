.tui-menu-list {
  cursor: pointer;
  padding: 20rpx;
  background-color: white;
  border-bottom: 1rpx solid #d8d8d8;
}

.header_view_hide {
  display: none;
}

.header_view_show {
  border: 1rpx solid rgb(47, 139, 245);
  border-radius: 35rpx;
  display: flex;
  color: rgb(47, 139, 245);
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 40%;
  left: 50%;
  margin-left: -100rpx;
}