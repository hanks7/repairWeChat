page {
  background-color: #efefef;
}

/*横向导航*/

.swiper-nav {
  position: sticky;
  top: 0;
  background-color: #fff;
  white-space: nowrap;
}

.swiper-nav .item-nav {
  position: relative;
  padding: 30rpx 32rpx;
  color: #999;
  font-size: 30rpx;
  cursor: pointer;
  display: inline-block;
}

.swiper-nav .active {
  color: #1387e6;
}

.swiper-nav .active::after {
  content: '';
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  height: 0;
  border-bottom: 4rpx solid #1387e6;
  border-radius: 4rpx;
  bottom: 18rpx;
}

.tui-menu-list {
  cursor: pointer;
  padding: 70rpx;
  background-color: white;
}

/*选取偶数标签*/

.tui-menu-list:nth-child(2n) {
  background-color: gray;
}
