<view class="tv-title"> 维修动态</view>
   <view class='tv-problem-description'>问题描述</view>


<view class="cast">
  <text class="cast-font">上报图片</text>
  <view class="cast-imgs">
    <block wx:for="{{imglist}}" wx:for-index="idx">
      <view class="cast-container">
        <image class="cast-img" src="{{item}}" data-post-Id="{{idx}}" catchtap="onItemClickListener"></image>
      </view>
    </block>
  </view>
</view>

<view class='weui-cell-third'>
  <!-- 参考文献
https://blog.csdn.net/oschina_41661541/article/details/81217619?depth_1-utm_source=distribute.pc_relevant.none-task-blog-OPENSEARCH-3&utm_source=distribute.pc_relevant.none-task-blog-OPENSEARCH-3 -->
  <view class="page-title">维修动态</view>
  <block wx:for="{{axis}}" wx:key="*this">
    <view class='weui-cell-list'>

      <view class='weui-cell-circle'></view>

      <view class='weui-cell-line'>

        <view class='weui-cell-name'>{{item.name}}</view>
        <view class='weui-cell-event'>{{item.event}}</view>
        <view class='weui-cell-time'>{{item.time}}</view>
      </view>

    </view>

  </block>
</view>

<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section section_gap">
    <view class="section__title">switch</view>
    <switch name="switch" />
  </view>
  <view class="section section_gap">
    <view class="section__title">slider</view>
    <slider name="slider" show-value></slider>
  </view>

  <view class="section">
    <view class="section__title">input</view>
    <input name="input" placeholder="please input here" />
  </view>
  <view class="section section_gap">
    <view class="section__title">radio</view>
    <radio-group name="radio-group">
      <label>
        <radio value="radio1" />radio1</label>
      <label>
        <radio value="radio2" />radio2</label>
    </radio-group>
  </view>
  <view class="section section_gap">
    <view class="section__title">checkbox</view>
    <checkbox-group name="checkbox">
      <label>
        <checkbox value="checkbox1" />checkbox1</label>
      <label>
        <checkbox value="checkbox2" />checkbox2</label>
    </checkbox-group>
  </view>
  <view class="btn-area">
    <button formType="submit">Submit</button>
    <button formType="reset">Reset</button>
  </view>

  <input  bindinput='getInputValue'  name='price1' type='text' placeholder='输入内容'></input>
  <input  bindinput='getInputValue'  name='price2' type='text' placeholder='输入内容'></input>
</form>