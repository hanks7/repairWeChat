/* pages/login/login.wxss */

page {
  height: 100%;
  background-size: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

/*登录图片*/

.login-icon {
  flex: none;
  margin: 0 auto;
  margin-top: 200rpx;
}

.login-img {
  width: 300rpx;
  height: 100rpx;
  margin-bottom: 90rpx;
}

/*表单内容*/

.login-from {
  margin-top: 90px;
  flex: auto;
  height: 100%;
  width: 90%;
}

/* 输入框 */

.myno {
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 50rpx;
}

.mypwd {
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 50rpx;
  margin-top: 20rpx;
}

/*按钮*/

.loginBtnView {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.loginBtn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 35px;
  color: #fff;
  background-color: #006990;
  border: 0.1rpx solid #ccc;
  border-radius: 40rpx;
}

.loginBtn-pressed {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 35px;
  color: #fff;
  background-color: #004E6B;
  border: 0.1rpx solid #004E6B;
  border-radius: 40rpx;
}

.nameImage, .keyImage {
  margin-right: 10px;
  width: 14px;
  height: 14px;
}

.weui-cell {
  height: 80rpx;
  display: flex; /*设置弹性盒子模型*/
  flex-direction: row; /*类似线性布局,水平显示*/
  flex-wrap: wrap; /*超出的部分换行*/
  align-items: center;
  margin-left: 22rpx;
}

.weui-cell__bd {
  width: 85%;
}
